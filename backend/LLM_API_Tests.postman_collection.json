  "item": [
    {
      "name": "1. LLM Chat & Interactive",
      "item": [
        {
          "name": "Chat - Ask about Evaluation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"What's the overall quality of this synthetic data?\",\n  \"evaluation_id\": \"YOUR_EVALUATION_ID_HERE\",\n  \"history\": []\n}"
            },
            "url": {
              "raw": "http://localhost:8000/llm/chat",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["llm", "chat"]
            },
            "description": "Interactive chat about evaluation results. Replace YOUR_EVALUATION_ID_HERE with actual ID."
          }
        },
        {
          "name": "Chat - With Conversation History",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"How can I improve the privacy level?\",\n  \"evaluation_id\": \"YOUR_EVALUATION_ID_HERE\",\n  \"history\": [\n    {\n      \"user\": \"What's the overall quality?\",\n      \"assistant\": \"The quality is Excellent with a score of 0.91\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "http://localhost:8000/llm/chat",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["llm", "chat"]
            },
            "description": "Chat with conversation history for context-aware responses."
          }
        },
        {
          "name": "Get Improvement Suggestions",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/llm/suggest-improvements/YOUR_EVALUATION_ID_HERE",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["llm", "suggest-improvements", "YOUR_EVALUATION_ID_HERE"]
            },
            "description": "Get 3-5 AI-powered improvement suggestions based on evaluation results."
          }
        },
        {
          "name": "Explain Metric - KS Statistic",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/llm/explain-metric?metric_name=ks_statistic&metric_value=0.087",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["llm", "explain-metric"],
              "query": [
                {
                  "key": "metric_name",
                  "value": "ks_statistic"
                },
                {
                  "key": "metric_value",
                  "value": "0.087"
                }
              ]
            },
            "description": "Get plain English explanation of technical metrics."
          }
        },
        {
          "name": "Explain Metric - Utility Ratio",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/llm/explain-metric?metric_name=utility_ratio&metric_value=0.89",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["llm", "explain-metric"],
              "query": [
                {
                  "key": "metric_name",
                  "value": "utility_ratio"
                },
                {
                  "key": "metric_value",
                  "value": "0.89"
                }
              ]
            },
            "description": "Explain ML utility ratio metric."
          }
        }
      ]
    },
    {
      "name": "2. Evaluation Intelligence",
      "item": [
        {
          "name": "Get Natural Language Insights",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/evaluations/YOUR_EVALUATION_ID_HERE/explain",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["evaluations", "YOUR_EVALUATION_ID_HERE", "explain"]
            },
            "description": "Convert technical evaluation metrics into business-friendly insights with executive summary, key findings, and recommendations."
          }
        },
        {
          "name": "Compare Multiple Evaluations",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "[\n  \"EVALUATION_ID_1\",\n  \"EVALUATION_ID_2\",\n  \"EVALUATION_ID_3\"\n]"
            },
            "url": {
              "raw": "http://localhost:8000/evaluations/compare",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["evaluations", "compare"]
            },
            "description": "Compare 2-5 evaluations and get recommendations on which approach is best."
          }
        }
      ]
    },
